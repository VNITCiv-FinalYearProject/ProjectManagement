<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Progress</title>
    <link rel="stylesheet" href="/css/progress.css" />
    </head>
<body>
    <nav>
        <ul>
            <li><a href="/dashboard">Home</a></li>
            <li><a href="/projects">Projects</a></li>
            <li><a href="#tasks">Notifications</a></li>
            <li><a href="#reports">About</a></li>
        </ul>
    </nav>

    <div class="container">
        <h1>Project Progress</h1>

        <!-- Progress bar section -->
        <div class="progress-container">
            <h3>Overall Project Progress</h3>
            <div class="progress-bar-background">
                <div class="progress-bar-fill" id="progressBar"></div>
            </div>
            <% if (percent) { %>
                <p><strong>Progress:</strong> <%= percent %> % completed</p>
            <% } else { %>
                <p><strong>Progress:</strong> Data not available</p>
            <% } %>
        </div>

        <div class="progress-grid">
            <% if (project.progresses && project.progresses.length > 0) { %>
                <% for (let prog of project.progresses) { %>
                    <div class="progress-card">
                        <h3>Stage: <%- prog.task %></h3>
                        <p><strong>Description:</strong> <%- prog.description %></p>
                        <% if (prog.completed) { %>
                            <p><strong>Sub task completion percentage:</strong> 100% done, sub task is finished!!</p>
                        <% } else { %>
                            <% 
                                let initialDate = new Date(prog.initial_date).getTime();
                                let finalDate = new Date(prog.final_date).getTime();
                                let subTaskPercentage = ((finalDate - initialDate) / initialDate) * 100;
                            %>
                            <p><strong>Sub task completion percentage:</strong> <%= subTaskPercentage.toFixed(2) %> % done</p>
                        <% } %>
                        <p><strong>Expected Completion Date:</strong> <%- prog.final_date.toDateString() %></p>
                    </div>
                <% } %>
            <% } else { %>
                <p>No progress data available as project not started.</p>
            <% } %>
        </div>

        <!-- Add Progress Button -->
        <a href="/project/<%= project._id %>/progress/addprogress" class="add-progress-btn">Add Progress</a>
    </div>

    <div class="footer">
        <p>&copy; 2024 Project Management. All rights reserved.</p>
    </div>

    <script>
        document.getElementById("progressBar").style.width = "<%= percent %>%";
    </script>
</body>
</html>
