<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Billing System</title>
    <link rel="stylesheet" href="/css/billing.css">
</head>
<body>

    <div class="container">
        <h1>Billing System</h1>

        <div class="button-group">
            <button class="button" onclick="showRunningBill()">Previous Bill</button>
            <a href="/project/<%= project.id %>/bill/addbill" class="button">Add Bill</a>            
        </div>

        <div id="lastUpdated">
            Last Updated: <span id="dateUpdated">No updates yet</span>
        </div>

        <div id="runningBill">
            <h3>Current Bill:</h3>
            <div id="billDetails">
                No bill available yet.
            </div>
        </div>
    </div>

    <script>
        // Simulated bill details
        let bill = {
            items: [],
            lastUpdated: null
        };

        // Function to show running bill
        function showRunningBill() {
            const billDetailsDiv = document.getElementById('billDetails');
            if (bill.items.length === 0) {
                billDetailsDiv.innerHTML = 'No bill available yet.';
            } else {
                billDetailsDiv.innerHTML = `<ul>${bill.items.map(item => <li>${item}</li>).join('')}</ul>`;
            }
        }

        // Function to update the bill
        function updateBill() {
            const item = prompt("Enter new item to add to the bill:");
            if (item) {
                bill.items.push(item);
                bill.lastUpdated = new Date().toLocaleString();
                document.getElementById('dateUpdated').innerText = bill.lastUpdated;
                alert("Bill updated successfully.");
                showRunningBill(); // Reflect changes in running bill
            }
        }
    </script>

</body>
</html>